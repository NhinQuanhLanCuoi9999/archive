#!/bin/bash

# ‚ö†Ô∏è TH√îNG TIN C·∫¶N CH·ªàNH:
DISK="/dev/sda"
EFI_PART="${DISK}1"
ROOT_PART="${DISK}2"

echo "üî• ƒê·ªãnh d·∫°ng ph√¢n v√πng EFI ($EFI_PART) v√† ROOT ($ROOT_PART)..."

# Format EFI
mkfs.fat -F32 "$EFI_PART" || { echo "‚ùå Format EFI fail"; exit 1; }

# Format ROOT
mkfs.ext4 "$ROOT_PART" || { echo "‚ùå Format ROOT fail"; exit 1; }

echo "‚úÖ Format th√†nh c√¥ng!"

# Mount ph√¢n v√πng
mount "$ROOT_PART" /mnt || { echo "‚ùå Mount ROOT fail"; exit 1; }

mkdir -p /mnt/boot/efi
mount "$EFI_PART" /mnt/boot/efi || { echo "‚ùå Mount EFI fail"; exit 1; }

echo "üöÄ M·ªçi th·ª© ƒë√£ s·∫µn s√†ng. Ti·∫øn h√†nh c√†i Arch th√¥i!"
